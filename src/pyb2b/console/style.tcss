.hidden {
    display: none;
}
SearchBlock {
    dock: left;
    width: 18;
    margin: 1;
}
SearchButton Label {
    text-align: center;
}
SearchButton Input {
    border: none;
    padding-left: 1;
    padding-right: 1;
    height: 2;
}
SearchButton Input:focus {
    border-bottom: $success;
}
DataTable {
    height: 1fr
}
#results-container {
    height: 1fr
}
Header.authenticated {
    background: $secondary-lighten-1
}
Footer.authenticated {
    background: $secondary-lighten-1
}
Footer.authenticated > .footer--key {
    color: white
}
Horizontal {
    height: 3;
}
Horizontal Static {
    padding-left: 1;
    padding-right: 1;
}
Horizontal Static#flight_id {
    width: 14;
    border: solid $primary;
}
Horizontal Static#callsign {
    width: 10;
    color: $secondary;
    text-style: bold;
    padding: 1;
}
Horizontal Static#iata {
    width: 10;
    color: $primary;
    padding: 1;
}
Horizontal Static#origin {
    width: 6;
    height: 2;
    border-bottom: $success;
    text-style: bold;
}
Horizontal Static#destination {
    width: 6;
    height: 2;
    border-bottom: $secondary;
    text-style: bold;
}
Static#icaoRoute {
    content-align: left top;
    height: 7;
    padding: 1;
    width: 100%
}
Horizontal Static#status {
    width: 25;
    dock: right;
    padding: 1;
    text-align: right;
}
Horizontal Static#icao24 {
    width: 8;
    height: 2;
}
Horizontal Static#typecode {
    width: 6;
    height: 2;
}
Horizontal#flight_times {
    height: 6;
    padding: 1
}
Horizontal#flight_times Vertical {
    width: 20;
}